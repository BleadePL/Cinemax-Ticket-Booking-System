@{
}

<h1>Check out</h1>


<table border="1">
    <thead>
        <tr>
            <th>
                Movie Title
            </th>
            <th>
                Movie Category
            </th>
            <th>
                Movie Description
            </th>
            <th>
                Quantity
            </th>
        </tr>
    </thead>

    <tbody>
        
        <tr>
            <td>
                @ViewData["MovieTitle"]
            </td>

            <td>
                @ViewData["MovieCategory"]
            </td>

            <td>
                @ViewData["MovieDescription"]
            </td>

            <td>
                x @ViewData["count"]
            </td>
        </tr>
    </tbody>
</table>

<div>
    Summary: @ViewData["ShowCost"]
</div>

@if (!User.Identity.IsAuthenticated)
{
    <form>
        <p>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
        </p>
        <p>
            <label for="surname">Surname:</label> 
            <input type="text" id="surname" name="surname" required>
        </p>
        <p>
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" required>
        </p>
        <p>
            <label>Email</label><br>
            <input type="email" name="email" required>
        </p>
        <p>
            <fieldset>Payment type <select id="payment" name="paymentType">
                    <option typeof="string" value="Visa">Visa</option>
                    <option typeof="string" value="Blik">Blik</option>
                    <option typeof="string" value="Mastercard">Mastercard</option>

                </select>
            </fieldset>
        </p>

    </form>
}
else
{
    <form>
        <p>
            <fieldset>Payment type <select id="payment" name="paymentType">
                    <option typeof="string" value="Visa">Visa</option>
                    <option typeof="string" value="Blik">Blik</option>
                    <option typeof="string" value="Mastercard">Mastercard</option>

                </select>
            </fieldset>
        </p>
    </form>
}

<div>
    <a class="btn btn-primary" action="ScreenRoom" asp-action="BookingTickets">Purchase</a>
</div>