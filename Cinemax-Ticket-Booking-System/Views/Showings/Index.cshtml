@model IEnumerable<Cinemax_Ticket_Booking_System.Models.Showing>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShowStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailibleSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScreeningRoom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShowStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailibleSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScreeningRoom.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDS">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDS">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDS">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
